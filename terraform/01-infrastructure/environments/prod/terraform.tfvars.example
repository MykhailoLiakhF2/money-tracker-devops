# Prod Environment â€” Example Values
# =============================================================================
# Copy this file to terraform.tfvars and fill in real values:
#   cp terraform.tfvars.example terraform.tfvars
# =============================================================================

credentials_file = "/path/to/your/terraform-sa-key.json"
project_id       = "your-gcp-project-id"
region           = "europe-central2"
zone             = "europe-central2-a"
cluster_name     = "prod-gke"
environment      = "prod"

# Network CIDRs (non-overlapping with dev)
subnet_cidr   = "10.10.0.0/24"
pods_cidr     = "10.11.0.0/20"
services_cidr = "10.12.0.0/24"

# GKE Node Pool
machine_type   = "e2-medium"
disk_size_gb   = 50
min_node_count = 3
max_node_count = 5
spot_instances = false

# GKE Settings
release_channel     = "STABLE"
deletion_protection = true

# Access Control
master_authorized_cidr = "YOUR_IP/32"
