# =============================================================================
# Dev Environment â€” Example Values
# =============================================================================
# Copy this file to terraform.tfvars and fill in real values:
#   cp terraform.tfvars.example terraform.tfvars
# =============================================================================

credentials_file = "/path/to/your/terraform-sa-key.json"
project_id       = "your-gcp-project-id"
region           = "europe-central2"
zone             = "europe-central2-a"
cluster_name     = "dev-gke"
environment      = "dev"

# Network CIDRs
subnet_cidr   = "10.0.0.0/24"
pods_cidr     = "10.1.0.0/20"
services_cidr = "10.2.0.0/24"

# GKE Node Pool
machine_type   = "e2-medium"
disk_size_gb   = 50
min_node_count = 1
max_node_count = 2
spot_instances = true

# GKE Settings
release_channel     = "REGULAR"
deletion_protection = false

# Access Control
master_authorized_cidr = "YOUR_IP/32"
